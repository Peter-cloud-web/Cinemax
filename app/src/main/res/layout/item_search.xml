<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/colorDark"
    android:elevation="10dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardView"
        android:background="@color/colorDark"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_movies"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/colorDark"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="bottom"
            android:background="@drawable/gradient_search"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/movieTitile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/alfa_slab_one"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="106dp"
            android:textColor="@color/white"
            android:text="Jurassic Park"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_movies"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ratingMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="106dp"
            android:textColor="@color/green"
            android:fontFamily="@font/allerta"
            android:text="Jurassic Park"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/image_movies"
            app:layout_constraintTop_toBottomOf="@+id/movieTitile" />

        <TextView
            android:id="@+id/aboutMovie"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="106dp"
            android:fontFamily="@font/allerta"
            android:textSize="12dp"
            android:text="Jurassic Park"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/image_movies"
            app:layout_constraintTop_toBottomOf="@+id/ratingMovie" />

        <Button
            android:id="@+id/btnTrailer"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:drawableEnd="@drawable/ic_baseline_play_circle_24"
            android:drawablePadding="-20dp"
            android:fontFamily="@font/allerta"
            android:text="Trailer"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/aboutMovie"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>


